@model CreateBannerVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create Banner</h4>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="CollectionTitle">CollectionTitle</label>
                                <input asp-for="CollectionTitle" class="form-control">
                                <span asp-validation-for="CollectionTitle" ></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MainTitle">MainTitle</label>
                                <input asp-for="MainTitle" class="form-control">
                                <span asp-validation-for="MainTitle"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Image">Image</label>
                                <input accept="image/*" asp-for="Image" class="form-control">
                                <span class="text-danger" asp-validation-for="Image"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a class="btn btn-light" asp-area="Manage" asp-controller="Banner" asp-action="Index">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>