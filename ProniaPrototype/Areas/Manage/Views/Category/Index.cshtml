@model ICollection<Category>
<div class="col-lg-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories</h4>
            <a class="btn btn-primary w-50" asp-area="Manage" asp-controller="Category" asp-action="Create" >Create</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Count</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category item in (Model ?? new List<Category>()))
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Count</td>
                                <td><a class="btn btn-info" asp-area="Manage" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                <td><a class="btn btn-danger" asp-area="Manage" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>