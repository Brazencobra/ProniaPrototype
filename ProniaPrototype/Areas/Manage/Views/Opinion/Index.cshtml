@model ICollection<Opinion>
<div class="col-lg-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Opinions</h4>
            <a class="btn btn-primary w-50" asp-area="Manage" asp-controller="Opinion" asp-action="Create">Create</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Role</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Opinion item in (Model ?? new List<Opinion>()))
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.Role</td>
                                <td>@item.Description</td>
                                <td><img src="@item.ImageUrl" /></td>
                                <td><a class="btn btn-info" asp-area="Manage" asp-controller="Opinion" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                <td><a class="btn btn-danger" asp-area="Manage" asp-controller="Opinion" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>