@model ICollection<Brand>
<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body"> 
            <h4 class="card-title">Brands</h4>
            <a class="btn btn-primary w-50" asp-area="Manage" asp-controller="Brand" asp-action="Create">Create</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Brand item in (Model ?? new List<Brand>()))
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td><img src="~/assets/images/@item.ImageUrl" /></td>
                                <td><a class="btn btn-info" asp-area="Manage" asp-controller="Brand" asp-action="Update" asp-route-id="@item.Id" >Update</a></td>
                                <td><a class="btn btn-danger" asp-area="Manage" asp-controller="Brand" asp-action="Delete" asp-route-id="@item.Id" >Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>