@model CreateBrandVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create Brand</h4>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="Image">Image</label>
                                <input accept="image/*" asp-for="Image" class="form-control">
                                <span class="text-danger" asp-validation-for="Image" ></span>
                            </div>
                            @* <a class="btn btn-primary me-2" asp-area="Manage" asp-controller="Brand" asp-action="Create">Create</a> *@
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a class="btn btn-light" asp-area="Manage" asp-controller="Brand" asp-action="Index">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>